@inject NavigationManager Navigation

<div class="user-info">
    <AuthorizeView>
        <Authorizing>
            <text>...</text>
        </Authorizing>
        <Authorized>
            <img src="img/user.svg" />
            <div>
                <a href="authentication/profile" class="username">@context.User.Identity?.Name</a>
                <button class="btn btn-link sign-out" @onclick="BeginSignOut">Cerrar sesión</button>
            </div>
        </Authorized>
        <NotAuthorized>
            <a class="sign-in" href="authentication/register">Registrarse</a>
            <a class="sign-in" href="authentication/login">Iniciar sesión</a>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    void BeginSignOut()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}